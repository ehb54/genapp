      ],
      '--help' => [
        'brief' => 'Show this help information.',
      ],
    ],
    'synonyms' => [
      'list',
      'dir',
    ],
    'formats' => [
      'full',
      'keyvalue',
      'linux',
      'text',
    ],
    'defaultFormat' => 'linux',
    'function' => 'runLs',
  ],

  //
  // HTTP DELETE operations supported.
  // ---------------------------------
